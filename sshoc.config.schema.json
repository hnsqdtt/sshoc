{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SSH Operation Component (SSHOC) config",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "defaults", "servers"],
  "properties": {
    "$schema": { "type": "string" },
    "schema_version": { "type": "integer", "const": 1 },
    "defaults": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "connect_timeout_sec",
        "command_timeout_sec",
        "max_stdout_bytes",
        "max_stderr_bytes",
        "known_hosts_policy",
        "known_hosts_path",
        "default_shell"
      ],
      "properties": {
        "connect_timeout_sec": { "type": "number", "minimum": 0 },
        "command_timeout_sec": { "type": "number", "minimum": 0 },
        "max_stdout_bytes": { "type": "integer", "minimum": 1 },
        "max_stderr_bytes": { "type": "integer", "minimum": 1 },
        "known_hosts_policy": { "type": "string", "enum": ["strict", "accept_new"] },
        "known_hosts_path": { "type": ["string", "null"] },
        "default_shell": { "type": ["string", "null"] }
      }
    },
    "servers": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z0-9_-]+$": { "$ref": "#/$defs/server" }
      },
      "additionalProperties": false
    }
  },
  "$defs": {
    "server": {
      "type": "object",
      "additionalProperties": false,
      "required": ["auth"],
      "properties": {
        "ssh_command": { "type": "string" },
        "host": { "type": "string" },
        "port": { "type": "integer", "minimum": 1, "maximum": 65535 },
        "username": { "type": "string" },
        "auth": { "$ref": "#/$defs/auth" },
        "proxy_command": { "type": ["string", "null"] },
        "shell": { "type": ["string", "null"] },
        "command_prefix": { "type": ["string", "null"] }
      },
      "oneOf": [
        {
          "required": ["ssh_command"],
          "not": {
            "anyOf": [
              { "required": ["host"] },
              { "required": ["port"] },
              { "required": ["username"] }
            ]
          }
        },
        {
          "required": ["host", "port", "username"],
          "not": { "required": ["ssh_command"] }
        }
      ]
    },
    "auth": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type"],
      "properties": {
        "type": { "type": "string", "enum": ["password", "key"] },
        "password": { "type": ["string", "null"] },
        "password_env": { "type": ["string", "null"], "pattern": "^[A-Za-z_][A-Za-z0-9_]*$" },
        "private_key_path": { "type": ["string", "null"] },
        "private_key_passphrase_env": {
          "type": ["string", "null"],
          "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
        },
        "allow_agent": { "type": "boolean", "default": true },
        "look_for_keys": { "type": "boolean", "default": true }
      },
      "allOf": [
        {
          "if": { "properties": { "type": { "const": "password" } } },
          "then": {
            "anyOf": [{ "required": ["password"] }, { "required": ["password_env"] }],
            "not": {
              "anyOf": [{ "required": ["private_key_path"] }, { "required": ["private_key_passphrase_env"] }]
            }
          }
        },
        {
          "if": { "properties": { "type": { "const": "key" } } },
          "then": {
            "required": ["private_key_path"],
            "not": { "anyOf": [{ "required": ["password"] }, { "required": ["password_env"] }] }
          }
        }
      ]
    }
  }
}
